<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mybatis.goods.goods_mapper">

	<!-- 상품 목록 조회 MyBatis -->
	<select id="selectGoodsListSQL"
		resultType="common.collection.ABox"
		parameterType="common.collection.ABox">
	<![CDATA[
		SELECT 
			* 
		FROM 
			tb_goods 
		]]>
		<trim prefix="WHERE" prefixOverrides="AND|OR">
			<if test="goodsCategory != '' and goodsCategory != null">
				GOODS_CATEGORY = #{goodsCategory}
			</if>
			<if test="goodsState != '' and goodsState != null">
				GOODS_STATE = #{goodsState}
			</if>
		</trim>		
		ORDER BY
			GOODS_SEQ DESC 
		LIMIT 
			0,10;

	</select>
	
	<select id="selectGoodsSQL"
		resultType="common.collection.ABox"
		parameterType="common.collection.ABox">
	<![CDATA[
		SELECT 
			* 
		FROM 
			tb_goods 
		WHERE
			GOODS_SEQ = #{goodsSeq} 
	]]>		
	</select>
	
	<select id="selectWishSQL"
		resultType="common.collection.ABox"
		parameterType="common.collection.ABox">
	<![CDATA[
		SELECT 
			* 
		FROM 
			tb_user_wish
		WHERE
			GOODS_SEQ = #{goodsSeq} 
	]]>		
	</select>

		<!-- 상품 목록 조회 MyBatis -->
	<select id="selectSaleRecordListSQL"
		resultType="common.collection.ABox"
		parameterType="common.collection.ABox">
	<![CDATA[
		SELECT 
			* 
		FROM 
			tb_traffic_hist 
		WHERE
			GOOD_SEQ = #{goodsSeq}
		ORDER BY
			TRAFFIC_SEQ DESC 
		LIMIT 
			0,10;
	]]>		
	</select>
</mapper>